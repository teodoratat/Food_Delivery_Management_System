<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="550.0" prefWidth="750.0" style="-fx-background-color: WHEAT;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.teo.cateringteo.controller.ReportsController">
    <children>
        <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="10.0" prefHeight="50.0" prefWidth="900.0">
            <children>
                <Label alignment="CENTER" contentDisplay="CENTER" text="         Reports">
                    <font>
                        <Font name="Candara Light" size="20.0" />
                    </font>
                </Label>
            </children>
        </HBox>
        <VBox prefHeight="101.0" prefWidth="750.0">
            <children>
                <HBox alignment="CENTER" prefHeight="50.0" prefWidth="750.0">
                    <children>
                        <HBox alignment="CENTER" prefHeight="83.0" prefWidth="167.0">
                            <children>
                                <Button mnemonicParsing="false" onAction="#onReport1Click" prefHeight="45.0" prefWidth="156.0" style="-fx-background-color: LIGHTSALMON;" text="Time Interval Report" wrapText="true">
                                    <font>
                                        <Font name="Candara Light Italic" size="15.0" />
                                    </font></Button>
                            </children>
                        </HBox>
                        <HBox alignment="CENTER" layoutX="301.0" layoutY="10.0" prefHeight="83.0" prefWidth="167.0">
                            <children>
                                <Button mnemonicParsing="false" onAction="#onReport2Click" prefHeight="45.0" prefWidth="150.0" style="-fx-background-color: LIGHTSALMON;" text="Ordered Many Times" wrapText="true">
                                    <font>
                                        <Font name="Candara Light Italic" size="15.0" />
                                    </font></Button>
                            </children>
                        </HBox>
                        <HBox alignment="CENTER" layoutX="385.0" layoutY="10.0" prefHeight="83.0" prefWidth="167.0">
                            <children>
                                <Button mnemonicParsing="false" onAction="#onReport3Click" prefHeight="45.0" prefWidth="150.0" style="-fx-background-color: LIGHTSALMON;" text="Loyal Customers" textAlignment="CENTER" wrapText="true">
                                    <font>
                                        <Font name="Candara Light Italic" size="15.0" />
                                    </font></Button>
                            </children>
                        </HBox>
                        <HBox alignment="CENTER" layoutX="469.0" layoutY="10.0" prefHeight="83.0" prefWidth="167.0">
                            <children>
                                <Button mnemonicParsing="false" onAction="#onReport4Click" prefHeight="45.0" prefWidth="150.0" style="-fx-background-color: LIGHTSALMON;" text="Statistic per day" wrapText="true">
                                    <font>
                                        <Font name="Candara Light Italic" size="15.0" />
                                    </font></Button>
                            </children>
                        </HBox>
                    </children>
                </HBox>
                <HBox alignment="CENTER" layoutX="10.0" layoutY="10.0" prefHeight="49.0" prefWidth="750.0">
                    <children>
                        <HBox alignment="CENTER" prefHeight="83.0" prefWidth="167.0">
                            <children>
                                <TextField fx:id="hourStartField" prefHeight="25.0" prefWidth="70.0" promptText="hour start" />
                                <TextField fx:id="hourStopField" layoutX="59.0" layoutY="22.0" prefHeight="25.0" prefWidth="70.0" promptText="hour stop" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER" layoutX="301.0" layoutY="10.0" prefHeight="83.0" prefWidth="167.0">
                            <children>
                                <TextField fx:id="orderedTimesField1" prefHeight="25.0" prefWidth="114.0" promptText="min ordered times" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER" layoutX="218.0" layoutY="10.0" prefHeight="83.0" prefWidth="167.0">
                            <children>
                                <TextField fx:id="orderedTimesField2" prefHeight="25.0" prefWidth="85.0" promptText="times ordred" />
                                <TextField fx:id="moneySpentField" layoutX="59.0" layoutY="22.0" prefHeight="26.0" prefWidth="86.0" promptText="money spent" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER" layoutX="469.0" layoutY="10.0" prefHeight="83.0" prefWidth="167.0">
                            <children>
                                <DatePicker fx:id="datePicker" prefHeight="25.0" prefWidth="123.0" promptText="date" />
                            </children>
                        </HBox>
                    </children>
                </HBox>
            </children>
        </VBox>
        <HBox alignment="CENTER" layoutX="10.0" layoutY="10.0" prefHeight="339.0" prefWidth="750.0">
            <children>
                <ScrollPane prefHeight="433.0" prefWidth="561.0" style="-fx-background-color: MOCCASBISQUEIN;">
                    <content>
                        <VBox prefWidth="540.0">
                            <children>
                                <Label fx:id="reportLabel" />
                            </children>
                        </VBox>
                    </content>
                </ScrollPane>
            </children>
        </HBox>
        <HBox alignment="CENTER" prefHeight="60.0" prefWidth="800.0">
            <children>
                <HBox alignment="CENTER" onDragDetected="#onBackButtonClick" prefHeight="45.0" prefWidth="267.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#onBackButtonClick" prefHeight="35.0" prefWidth="110.0" style="-fx-background-color: TOMATO;" text="Back">
                            <font>
                                <Font name="Candara Light" size="15.0" />
                            </font>
                        </Button>
                    </children>
                </HBox>
            </children>
        </HBox>
        <HBox />
    </children>
</VBox>
